@using Microsoft.Extensions.Localization
@using PenielSite2.Localize

@inject IStringLocalizer<Resource> _loc
@model ContactFormModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .row-margin-05 {
        margin-top: 0.5em;
    }

    .row-margin-10 {
        margin-top: 1.0em;
    }
</style>

<div>
    <img src="..\img\sea_of_galilee_sunset.png" class="img-fluid" />
</div>
<div class="row row-margin-10">
    <div class="col-sm-4" align="@(Model.lang=="he"? "right":"left")">
        <!-- Card -->
        <div class="card h-100">
            <form class="form form-horizontal" method="post">
                <div class="col-sm-12">
                    <h5>@_loc["Contact us"]...</h5>
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="name" class="col-sm-12">@_loc["Name"]:</label>
                    <div class="col-sm-12">
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="col-sm-12">@_loc["Email"]:</label>
                    <div class="col-sm-12">
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="subject" class="col-sm-12">@_loc["Subject"]:</label>
                    <div class="col-sm-12">
                        <input asp-for="subject" class="form-control" />
                        <span asp-validation-for="subject"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="message" class="col-sm-12">@_loc["Your Message"]:</label>
                    <div class="col-sm-12">
                        <textarea asp-for="message" rows="6" class="form-control"></textarea>
                        <span asp-validation-for="message"></span>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button type="submit">@_loc["Send"]</button>
                </div>

            </form>
            <div class="col-sm-12">
                <h2>@_loc["Peniel Fellowship"]</h2>
                <h6>@_loc["A Ministry of \"Tsur Haim\""]<br />
                (@_loc["An Israeli non-profit organization"])<br /><br />
                @_loc["P.O.Box 620, HaMasor Street 15"] <br />
                @_loc["Tiberias 14107 Israel"]<br />
                @_loc["Telefax"]: 972-4-6797767<br />
                @_loc["E-mail"]: penielfellowship@gmail.com<br /></h6>
            </div>
        </div>
    </div>
<div class="col-sm-8">
    <iframe style="border:0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6332.164983180515!2d35.497435106756335!3d32.78304021517677!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151c3f3d803f011f%3A0x68b8a67d5f782c43!2z16fXlNeZ15zXlCDXntep15nXl9eZ16og16TXoNeZ15DXnCBQZW5pZWwg0J_QvdC40Y3Qu9GM!5e0!3m2!1sen!2sil!4v1515431534310"
            class="w-100 h-100" frameborder="0" allowfullscreen>
    </iframe>
</div>
</div>
